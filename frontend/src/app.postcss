@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body {
    @apply bg-neutral-800 text-white;


    font-family: 'Roboto', Helvetica Neue, sans-serif;
    margin: 0;
    padding: 0;
    overflow: hidden;
}

button {
    @apply p-2 px-3 text-lg rounded select-none;
}

select {
    @apply p-2 px-3 text-lg rounded text-black;
}

input {
    @apply bg-neutral-700 p-1 px-2;
}